@model Model.Infrastructure.ModelCatalog
@{
    ViewBag.Title = "Category";
}

@if (Model.Categorys.Count() > 0)
{
    <div class="list-group list-cust">
        <h5 class="list-group-item active">Подкатегории</h5>
        <div class="col-lg-12">
            @foreach (var element in Model.Categorys)
            {
                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.ActionLink(element.NAME, "Category", "Product", new { id = element.ID }, null)
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
}



@if (Model.Products.Count() > 0)
{
    <div class="list-group list-cust">
        <h5 class="list-group-item active">Товары</h5>
        <div class="col-lg-12">
            @foreach (var element in Model.Products)
            {
                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.ActionLink(element.NAME, "Details", new { id = element.ID })
                        </div>
                        <div class="col-lg-12">
                            <div class="col-lg-5">
                                @Html.LabelFor(modeItem => element.QUNTITY)
                            </div>
                            <div class="col-lg-7">
                                @Html.DisplayFor(modeItem => element.QUNTITY)
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="col-lg-5">
                                @Html.LabelFor(modeItem => element.PRICE_ONE)
                            </div>
                            <div class="col-lg-7">
                                @Html.DisplayFor(modeItem => element.PRICE_ONE)
                            </div>
                        </div>
                        <div class="col-lg-12">
                            @Html.ActionLink("В корзину", "AddedToBasket", new { id = element.ID }, new { @class = "btn btn-primary btn-xs" })
                        </div>
                    </div>


                </div>
            }

        </div>
    </div>
}




