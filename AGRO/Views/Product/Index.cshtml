@model Model.Infrastructure.PageModels 

@{
    ViewBag.Title = "Главная страница";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Продукты</h2>

@foreach (var element in Model.Products)
{
    <div class="col-lg-4">
        <div class="row">
            <div class="col-lg-12">
                @Html.ActionLink(element.NAME, "Details", new { id = element.ID })
            </div>
            <div class="col-lg-12">
                <div class="col-lg-5">
                    @Html.DisplayNameFor(modeItem => element.QUNTITY)
                </div>
                <div class="col-lg-7">
                    @Html.DisplayFor(modeItem => element.QUNTITY)
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-5">
                    @Html.DisplayNameFor(modeItem => element.PRICE_ONE)
                </div>
                <div class="col-lg-7">
                    @Html.DisplayFor(modeItem => element.PRICE_ONE)
                </div>
            </div>
            <div class="col-lg-12">
                @Html.ActionLink("В корзину", "AddedToBasket", new { id = element.ID }, new { @class = "btn btn-primary btn-xs" })
            </div>
        </div>


    </div>
}




